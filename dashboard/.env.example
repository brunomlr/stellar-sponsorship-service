# Stellar Sponsorship Service — Dashboard

NEXT_PUBLIC_API_URL=http://localhost:8080   # URL of the sponsorship API server
NEXT_PUBLIC_STELLAR_NETWORK=testnet         # "testnet" or "mainnet" — must match the API server

# NextAuth.js (Google Workspace OAuth)
NEXTAUTH_URL=http://localhost:3000             # Base URL of the dashboard
NEXTAUTH_SECRET=generate-with-openssl-rand-base64-32  # openssl rand -base64 32
GOOGLE_CLIENT_ID=your-google-oauth-client-id   # From Google Cloud Console
GOOGLE_CLIENT_SECRET=your-google-oauth-secret  # From Google Cloud Console
GOOGLE_ALLOWED_DOMAIN=yourcompany.com          # Google Workspace domain


